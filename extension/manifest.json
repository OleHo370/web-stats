{
  "manifest_version": 3,
  "name": "YouTube Watch Stats Tracker",
  "version": "1.1.3",
  "description": "Track your YouTube watch history and sync with Watch Stats app",
  "permissions": [
    "storage",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:8000/*",
    "https://accounts.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}